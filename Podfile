# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'Movies' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Movies
    pod 'Alamofire', '~> 4.4.0'
    pod 'ObjectMapper'
    pod 'SwiftyJSON'
    pod 'AlamofireObjectMapper'


    
    # Layout Constraints
    pod 'Cartography'
    
    #Localization
    pod 'Localize-Swift'
    
    #Image Downloader
    pod 'Kingfisher'
    
    
    #Database caching
    pod 'RealmSwift'
    pod "ObjectMapper+Realm"
    
    #Debugger
    pod 'Dotzu'
    
    #Messages
    pod 'SwiftMessages'
    
    #network
    pod 'ReachabilitySwift', '~> 4.1'
    


end
